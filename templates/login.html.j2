{% extends "base.html.j2" %}

{% block content %}
<div class="max-w-md mx-auto mt-8">
  <h1 class="text-3xl font-medium mb-6">Log in to your account</h1>
  
  <div class="bg-gray-50 rounded-3xl p-8 border border-gray-300">
    <form hx-post="/login_submit" hx-target="#response" hx-swap="innerHTML">
      <div class="space-y-4">
        <div>
          <label for="email" class="block text-lg font-medium mb-2">Email address:</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            placeholder="your@email.com"
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg"
            required 
          />
        </div>
        
        <button type="submit" class="btn-primary w-full">
          Continue
        </button>
      </div>
    </form>
    
    <div id="response" class="mt-4"></div>
  </div>
</div>
{% endblock %} 