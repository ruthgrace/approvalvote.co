<div class="chart-wrap vertical">
  <h2 class="title">Votes for your preferred result</h2>
  <div class="grid">
    {% if len(candidates.keys() == 1) %}
      {% set candidate_name = candidates.values()[0] %} 
      {% for i in range(len(desired_vote_tally)) %}
        <div class="bar" style="--bar-value:{{desired_vote_tally[i]*100/max_votes}}%;" data-name="Votes for {{candidate_name}}" title="Votes for {{candidate_name}}"></div>
      {% endfor %}   
    {% else %}
      {% for i in range(len(desired_vote_tally)) %}
        <div class="bar" style="--bar-value:{{desired_vote_tally[i]*100/max_votes}}%;" data-name="Votes for {{i+1}} candidates in this set" title="Votes for {{i+1}} candidates in this set"></div>
      {% endfor %} 
    {% endif %}
  </div>
</div>

<div class="chart-wrap vertical">
  <h2 class="title">Votes for the actual winners</h2>

  <div class="grid">
  {% if len(candidates.keys() == 1) %}
