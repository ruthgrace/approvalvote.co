<div class="chart-wrap vertical">
  <h2 class="title">Votes for your preferred result: {{desired_candidates}}</h2>
  <p>actual vote tally is {{actual_vote_tally}}</p>
  <p>desired vote tally is {{desired_vote_tally}}</p>
  <p>max votes is {{max_votes}}</p>
  <div class="grid">
    {% if maxvotes == 1 %}
      {% set candidate_name = desired_candidates[0] %}
        <div class="bar" style="--bar-value:{{desired_vote_tally[i]*100/max_votes}}%;" data-name="Votes for {{candidate_name}}" title="Votes for {{candidate_name}}"></div>
    {% else %}
      {% for  vote in desired_vote_tally %}
        <div class="bar" style="--bar-value:{{vote*100/max_votes}}%;" data-name="Votes for {{desired_candidates[loop.index]}} candidates in this set" title="Votes for {{desired_candidates[loop.index]}} candidates in this set"></div>
      {% endfor %} 
    {% endif %}
  </div>
</div>

<div class="chart-wrap vertical">
  <h2 class="title">Votes for the actual winners: {{actual_candidates}}</h2>

  <div class="grid">
  {% if maxvotes == 1 %}
      {% set candidate_name = actual_candidates[0] %} 
        <div class="bar" style="--bar-value:{{actual_vote_tally[i]*100/max_votes}}%;" data-name="Votes for {{candidate_name}}" title="Votes for {{candidate_name}}"></div>
    {% else %}
      {% for vote in actual_vote_tally %}
        <div class="bar" style="--bar-value:{{vote*100/max_votes}}%;" data-name="Votes for {{actual_candidates[loop.index]}} candidates in this set" title="Votes for {{actual_candidates[loop.index]}} candidates in this set"></div>
      {% endfor %}    
    {% endif %}
  </div>
</div>