      {% endfor %}   
    {% else %}
      {% for i in range(len(actual_vote_tally)) %}
        <div class="bar" style="--bar-value:{{actual_vote_tally[i]*100/max_votes}}%;" data-name="Votes for {{i+1}} candidates in this set" title="Votes for {{i+1}} candidates in this set"></div>
      {% endfor %}    
    {% endif %}
  </div>
</div>