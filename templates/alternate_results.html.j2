<div class="container mx-auto px-4">
  <div style="display: flex; justify-content: space-around; gap: 20px;">
    <div style="flex: 1;">
      <h2 class="text-2xl font-bold mb-4">Votes for preferred result: {{ desired_candidates }}</h2>
      <div id="chart1" class="h-64"></div>
    </div>

    <!-- Second Chart Container -->
    <div style="flex: 1;">
      <h2 class="text-2xl font-bold mb-4">Votes for the actual winners: {{actual_candidates}}</h2>
      <div id="chart2" class="h-64"></div>
    </div>

  </div>
</div>

  <script>
    var options1 = {
      yaxis: {
        min: 0,
        max: {{max_votes}}
      },
      chart: {
        type: 'bar',
        height: '400'
      },
      series: [
        {
          name: 'Votes',
          data: {{desired_vote_tally}}
        }
      ],
      xaxis: {
        categories: {{desired_chart_labels}}
      },
      colors: ['#4F46E5'],
      plotOptions: {
        bar: {
          distributed: false,
          borderRadius: 4
        }
      }
    };

    var chart1 = new ApexCharts(document.querySelector('#chart1'), options1);
    chart1.render();

    var options2 = {
      yaxis: {
        min: 0,
        max: {{max_votes}}
      },
      chart: {
        type: 'bar',
        height: '400'
      },
      series: [
        {
          name: 'Votes',
          data: {{actual_vote_tally}}
        }
      ],
      xaxis: {
        categories: {{actual_chart_labels}}
      },
      colors: ['#4F46E5'],
      plotOptions: {
        bar: {
          distributed: false,
          borderRadius: 4
        }
      }
    };

    var chart2 = new ApexCharts(document.querySelector('#chart2'), options2);
    chart2.render();
  </script>